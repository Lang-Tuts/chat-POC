= form_for @broadcast do |f|
  - if @broadcast.errors.any?
    #error_explanation
      %h2= "#{pluralize(@broadcast.errors.count, "error")} prohibited this broadcast from being saved:"
      %ul
        - @broadcast.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :user_id, value: current_user.try(:id), class: 'hide'
  .field
    = f.label :channel_id
    = f.text_field :channel_id
  .field
    = f.label :message
    = f.text_field :message
  .actions
    = f.submit 'Save'
